generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survey {
  id          String      @id @default(cuid())
  title       String
  description String?
  questions   Question[]
  reports     Report[]
  responses   Response[]
  createdAt   DateTime    @default(now())
}

model Question {
  id        String   @id @default(cuid())
  survey    Survey   @relation(fields: [surveyId], references: [id])
  surveyId  String
  text      String
  order     Int
  answers   Answer[]
}

model Response {
  id        String    @id @default(cuid())
  surveyId  String
  survey    Survey    @relation(fields: [surveyId], references: [id])
  answers   Answer[]
  createdAt DateTime  @default(now())
}

model Answer {
  id         String    @id @default(cuid())
  response   Response  @relation(fields: [responseId], references: [id])
  responseId String

  question   Question  @relation(fields: [questionId], references: [id])
  questionId String

  value      Int
}

model Report {
  id        String   @id @default(cuid())
  surveyId  String
  survey    Survey   @relation(fields: [surveyId], references: [id])
  content   String   @db.Text
  createdAt DateTime @default(now())
}
